{
  "format_version": "1.20.10",
  "minecraft:block": {
    "description": {
      "identifier": "plushies:hoglin_piglin_plushie",
      "properties": {
        "plushies:rotation": {
          "values": { "min": 0, "max": 15 }
        },
        "plushies:pose": {
          "values": { "min": 0, "max": 2 }
        }
      }
    },
    "permutations": [
      {
        "condition": "(q.block_property('plushies:rotation') >= 4)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, -90, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:rotation') >= 8)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:rotation') >= 12)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:pose') == 0)",
        "components": {
          "minecraft:geometry": "geometry.hoglin_piglin_plushie"
        }
      },
      {
        "condition": "(q.block_property('plushies:pose') == 1)",
        "components": {
          "minecraft:geometry": "geometry.hoglin_piglin_plushie_sitting"
        }
      }
    ],
    "components": {
      "tag:plushie": {},
      "minecraft:loot": "loot_tables/blocks/hoglin/hoglin_piglin_plushie.json",
      "minecraft:geometry": "geometry.hoglin_piglin_plushie",
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1
      },
      "minecraft:flammable": {
        "catch_chance_modifier": 5,
        "destroy_chance_modifier": 5
      },
      "minecraft:collision_box": {
        "origin": [-8, 0, -3.25],
        "size": [16, 16, 7]
      },
      "minecraft:selection_box": {
        "origin": [-8, 0, -3.25],
        "size": [16, 16, 7]
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "hoglin_piglin_plushie",
          "render_method": "alpha_test"
        }
      },
      "minecraft:on_interact": {
        "condition": "q.is_sneaking",
        "event": "pose"
      },
      "minecraft:on_player_placing": {
        "event": "set_placement"
      }
    },
    "events": {
      "set_placement": {
        "set_block_property": {
          "plushies:rotation": "q.block_face == 1 ? { t.positive_head_rot = q.head_y_rotation(0) + 360 * (q.head_y_rotation(0) != Math.abs(q.head_y_rotation(0))); t.block_rotation = Math.round(t.positive_head_rot / 22.5); return t.block_rotation != 16 ? t.block_rotation; };"
        }
      },
      "pose": {
        "sequence": [
          {
            "condition": "q.block_property('plushies:pose') == 0",
            "set_block_property": {
              "plushies:pose": "1"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 1",
            "set_block_property": {
              "plushies:pose": "0"
            }
          }
        ]
      }
    }
  }
}
