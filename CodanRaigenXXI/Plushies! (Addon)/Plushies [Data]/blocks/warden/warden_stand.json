{
  "format_version": "1.20.10",
  "minecraft:block": {
    "description": {
      "identifier": "plushies:warden_plushie_stand",
      "traits": {
        "minecraft:placement_direction": {
          "enabled_states": ["minecraft:cardinal_direction"],
          "y_rotation_offset": 180
        }
      },
      "properties": {
        "plushies:pose": {
          "values": { "min": 0, "max": 3 }
        }
      }
    },
    "permutations": [
      {
        "condition": "q.block_property('minecraft:cardinal_direction') == 'north'",
        "components": {
          "minecraft:transformation": { "rotation": [0, 0, 0] }
        }
      },
      {
        "condition": "q.block_property('minecraft:cardinal_direction') == 'west'",
        "components": {
          "minecraft:transformation": { "rotation": [0, 90, 0] }
        }
      },
      {
        "condition": "q.block_property('minecraft:cardinal_direction') == 'south'",
        "components": {
          "minecraft:transformation": { "rotation": [0, 180, 0] }
        }
      },
      {
        "condition": "q.block_property('minecraft:cardinal_direction') == 'east'",
        "components": {
          "minecraft:transformation": { "rotation": [0, -90, 0] }
        }
      },
      {
        "condition": "q.block_property('plushies:pose') == 0",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_stand"
        }
      },
      {
        "condition": "q.block_property('plushies:pose') == 1",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_stand"
        }
      },
      {
        "condition": "q.block_property('plushies:pose') == 2",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_stand"
        }
      },
      {
        "condition": "q.block_property('plushies:pose') == 3",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_stand"
        }
      }
    ],
    "components": {
      "tag:plushie": {},
      "minecraft:loot": "loot_tables/blocks/allay/stand/warden_plushie_stand.json",
      "minecraft:geometry": "geometry.warden_plushie_stand",
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1
      },
      "minecraft:flammable": {
        "catch_chance_modifier": 5,
        "destroy_chance_modifier": 5
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "warden_plushie",
          "render_method": "alpha_test"
        }
      },
      "minecraft:collision_box": {
        "origin": [-8, 0, -2.5],
        "size": [16, 16, 5]
      },
      "minecraft:selection_box": {
        "origin": [-8, 0, -2.5],
        "size": [16, 16, 5]
      },
      "minecraft:on_placed": {
        "event": "set_placement"
      },
      "minecraft:on_interact": {
        "condition": "q.is_sneaking",
        "event": "pose"
      }
    },
    "events": {
      "set_placement": {
        "set_block_property": {
          "minecraft:cardinal_direction": "query.cardinal_facing_2d"
        }
      },
      "pose": {
        "sequence": [
          {
            "condition": "q.block_property('plushies:pose') == 0",
            "set_block_property": {
              "plushies:pose": "1"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 1",
            "set_block_property": {
              "plushies:pose": "2"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 2",
            "set_block_property": {
              "plushies:pose": "3"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 3",
            "set_block_property": {
              "plushies:pose": "0"
            }
          }
        ]
      }
    }
  }
}
