{
  "format_version": "1.20.10",
  "minecraft:block": {
    "description": {
      "identifier": "plushies:warden_plushie",
      "properties": {
        "plushies:rotation": {
          "values": { "min": 0, "max": 4 }
        },
        "plushies:pose": {
          "values": { "min": 0, "max": 2 }
        }
      }
    },
    "permutations": [
      {
        "condition": "(q.block_property('plushies:rotation') == 0)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 180, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:rotation') == 1)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 0, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:rotation') == 2)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, -90, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:rotation') == 3)",
        "components": {
          "minecraft:transformation": {
            "rotation": [0, 90, 0]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:pose') == 0)",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie"
        }
      },
      {
        "condition": "(q.block_property('plushies:pose') == 1)",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_sitting",
          "minecraft:collision_box": {
            "origin": [-8, 0, -2.5],
            "size": [16, 13, 5]
          },
          "minecraft:selection_box": {
            "origin": [-8, 0, -2.5],
            "size": [16, 13, 5]
          }
        }
      },
      {
        "condition": "(q.block_property('plushies:pose') == 2)",
        "components": {
          "minecraft:geometry": "geometry.warden_plushie_roaring"
        }
      }
    ],
    "components": {
      "tag:plushie": {},
      "minecraft:loot": "loot_tables/blocks/flying/warden_plushie.json",
      "minecraft:geometry": "geometry.warden_plushie",
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1
      },
      "minecraft:flammable": {
        "catch_chance_modifier": 5,
        "destroy_chance_modifier": 5
      },
      "minecraft:collision_box": {
        "origin": [-8, 0, -2.5],
        "size": [16, 16, 5]
      },
      "minecraft:selection_box": {
        "origin": [-8, 0, -2.5],
        "size": [16, 16, 5]
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "warden_plushie",
          "render_method": "alpha_test"
        }
      },
      "minecraft:on_interact": {
        "condition": "q.is_sneaking",
        "event": "pose"
      },
      "minecraft:on_player_placing": {
        "event": "set_placement"
      }
    },
    "events": {
      "set_placement": {
            "set_block_property": {
              "plushies:rotation": "query.cardinal_facing_2d-2"
          }
      },
      "pose": {
        "sequence": [
          {
            "condition": "q.block_property('plushies:pose') == 0",
            "set_block_property": {
              "plushies:pose": "1"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 1",
            "set_block_property": {
              "plushies:pose": "2"
            }
          },
          {
            "condition": "q.block_property('plushies:pose') == 2",
            "set_block_property": {
              "plushies:pose": "0"
            }
          }
        ]
      }
    }
  }
}
